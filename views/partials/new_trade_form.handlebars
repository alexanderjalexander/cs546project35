<form action="/trades" method="POST" class="new-trade-form">
    <p>{{username}}'s items</p>
    {{#each items}}
    <label for="{{this._id}}">{{this.name}}</label>
    <input type="checkbox" id="{{this._id}}" name="otherUserItems" value="{{this._id}}">
    {{/each}}
    <p>Your items</p>
    {{#each thisUser.items}}
    <label for="{{this._id}}">{{this.name}}</label>
    <input type="checkbox" id="{{this._id}}"  name="thisUserItems" value="{{this._id}}">
    {{/each}}
    <input type="text" name="otherUserId" value="{{_id}}" hidden>
    <button type="submit">Request Trade</button>
</form>