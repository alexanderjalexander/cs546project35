<form action="/trades/{{otherUser._id}}" method="POST">
    <p>{{otherUser.username}}'s items</p>
    {{#each otherUser.items}}
    <label for="{{this.desc}}">{{this.name}}</label>
    <input type="checkbox" id="{{this.desc}}">
    {{/each}}
    <p>Your items</p>
    {{#each thisUser.items}}
    <label for="{{this.desc}}">{{this.name}}</label>
    <input type="checkbox" id="{{this.desc}}">
    {{/each}}
    <button type="submit">Request Trade</button>
</form>